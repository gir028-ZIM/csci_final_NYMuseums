---
interface Props {
  name: string;
  review: string;
  city: string;
  zip: string;
  url: string;
}

const { name, review, city, zip, url } = Astro.props;
---

<div class="review-card">
  <div class="review-header">
    <h3>{name}</h3>
    <p class="location">üìç {city}, NY {zip}</p>
  </div>
  <div class="review-body">
    <p class="review-text">"{review}"</p>
  </div>
  <div class="review-footer">
    <a href={url} target="_blank" class="visit-btn">Visit Website</a>
  </div>
</div>

<style>
  .review-card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
    transition: transform 0.2s, box-shadow 0.2s;
    border-left: 4px solid #667eea;
  }

  .review-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .review-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 16px;
  }

  .review-header h3 {
    margin: 0 0 8px 0;
    font-size: 1.1rem;
    line-height: 1.3;
  }

  .location {
    margin: 0;
    font-size: 0.9rem;
    opacity: 0.9;
  }

  .review-body {
    padding: 16px;
    flex-grow: 1;
  }

  .review-text {
    margin: 0;
    color: #333;
    font-size: 0.95rem;
    line-height: 1.6;
    font-style: italic;
  }

  .review-footer {
    padding: 12px 16px;
    border-top: 1px solid #f0f0f0;
  }

  .visit-btn {
    display: inline-block;
    background-color: #667eea;
    color: white;
    padding: 8px 16px;
    border-radius: 4px;
    text-decoration: none;
    font-size: 0.9rem;
    transition: background-color 0.2s;
  }

  .visit-btn:hover {
    background-color: #764ba2;
  }
</style>
