---
import Layout from '../../layouts/Layout.astro';
import MuseumCard from '../../components/MuseumCard.astro';
import museums from '../../data/museums_clean.json';

interface Museum {
  the_geom: string;
  name: string;
  tel: string;
  url: string;
  address1: string;
  address2: string;
  city: string;
  zip: string;
}

// Generate static paths for each location
export function getStaticPaths() {
  const rows = Array.isArray(museums as any) ? (museums as any) : ((museums as any).data || []);
  
  const museumList: Museum[] = rows.map((row: any) => ({
    the_geom: row.the_geom ?? row[8],
    name: row.name ?? row[9],
    tel: row.tel ?? row[10],
    url: row.url ?? row[11],
    address1: row.address1 ?? row[12] ?? row.adress1 ?? '',
    address2: row.address2 ?? row[13] ?? '',
    city: row.city ?? row[14] ?? '',
    zip: row.zip ?? row[15] ?? ''
  }));

  const locations = [...new Set(museumList.map(m => m.city))].sort();
  
  return locations.map((city: string) => ({
    params: { slug: city.toLowerCase().replace(/\s+/g, '-') },
    props: { city }
  }));
}

// Parse museum data for the page
const rows = Array.isArray(museums as any) ? (museums as any) : ((museums as any).data || []);

const museumList: Museum[] = rows.map((row: any) => ({
  the_geom: row.the_geom ?? row[8],
  name: row.name ?? row[9],
  tel: row.tel ?? row[10],
  url: row.url ?? row[11],
  address1: row.address1 ?? row[12] ?? row.adress1 ?? '',
  address2: row.address2 ?? row[13] ?? '',
  city: row.city ?? row[14] ?? '',
  zip: row.zip ?? row[15] ?? ''
}));

// Extract unique cities/locations
const locations: string[] = [...new Set(museumList.map(m => m.city))].sort();

interface Props {
  city: string;
}

const { city } = Astro.props;

// Filter museums by location
const locationMuseums = museumList.filter(m => m.city === city);
---

<Layout title={`Museums in ${city} - NYC Museums Directory`}>
  <header>
    <h1>üèõÔ∏è {city}</h1>
    <p>Museums and Cultural Institutions</p>
  </header>
  
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/locations/">All Locations</a></li>
      <li><a href="/reviews/">Reviews</a></li>
    </ul>
  </nav>
  
  <section class="location-title">
    <h1>{city}</h1>
    <p>Discover {locationMuseums.length} museums in {city}</p>
  </section>
  
  <section class="location-links">
    <h3>Other Locations</h3>
    <ul>
      {locations.map(loc => (
        <li>
          <a href={`/locations/${loc.toLowerCase().replace(/\s+/g, '-')}/`}>
            {loc} ({museumList.filter(m => m.city === loc).length})
          </a>
        </li>
      ))}
    </ul>
  </section>
  
  <div class="museums-grid">
    {locationMuseums.map((museum) => (
      <MuseumCard 
        name={museum.name}
        address1={museum.address1}
        city={museum.city}
        zip={museum.zip}
        tel={museum.tel}
        url={museum.url}
      />
    ))}
  </div>
  
  <footer>
    <p>&copy; 2025 NYC Museums Directory | Data from NYC OpenData</p>
  </footer>
</Layout>

