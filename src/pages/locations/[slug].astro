---
import museums from '../../data/museums_clean.json';

interface Museum {
  the_geom: string;
  name: string;
  tel: string;
  url: string;
  adress1: string;
  address2: string;
  city: string;
  zip: string;
}

// Parse museum data
const museumList: Museum[] = museums.data.map((row: any) => ({
  the_geom: row[8],
  name: row[9],
  tel: row[10],
  url: row[11],
  adress1: row[12],
  address2: row[13],
  city: row[14],
  zip: row[15],
}));

// Extract unique cities/locations
const locations = [...new Set(museumList.map(m => m.city))].sort();

// Generate static paths for each location
export async function getStaticPaths() {
  return locations.map(city => ({
    params: { slug: city.toLowerCase().replace(/\s+/g, '-') },
    props: { city }
  }));
}

interface Props {
  city: string;
}

const { city } = Astro.props;

// Filter museums by location
const locationMuseums = museumList.filter(m => m.city === city);
